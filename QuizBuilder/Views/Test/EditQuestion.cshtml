@model QuizBuilder.ViewModels.Test.QuestionEditViewModel

@{
    ViewData["Title"] = "Edit Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редагування запитання</h1>

@using (Html.BeginForm())
{
        <div class="form-group">
            <label asp-for="Text" class="control-label">Текст питання:</label>
            <textarea asp-for="Text" class="form-control"></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Type" class="control-label">Тип питання:</label>
            <select asp-for="Type" class="form-control">
                <option value="SingleChoice">Одиночний вибір</option>
                <option value="MultipleChoice">Множинний вибір</option>
                <option value="Matching">Відповідність</option>
                <option value="Open">Відкрите</option>
                <option value="Algorithm">Алгоритмічне</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

    @if (Model.Type == "SingleChoice")
    {
                <div class="form-group">
                    <label asp-for="CorrectOptionText" class="control-label">Правильна відповідь:</label>
                    <input asp-for="CorrectOptionText" class="form-control" />
                    <span asp-validation-for="CorrectOptionText" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WrongOption1Text" class="control-label">Неправильна відповідь 1:</label>
                    <input asp-for="WrongOption1Text" class="form-control" />
                    <span asp-validation-for="WrongOption1Text" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WrongOption2Text" class="control-label">Неправильна відповідь 2:</label>
                    <input asp-for="WrongOption2Text" class="form-control" />
                    <span asp-validation-for="WrongOption2Text" class="text-danger"></span>
                </div>
    }
    else if (Model.Type == "Algorithm")
    {
                <div class="form-group">
                    <label asp-for="ExpectedAnswer1Text" class="control-label">Очікувана відповідь 1:</label>
                    <input asp-for="ExpectedAnswer1Text" class="form-control" />
                    <span asp-validation-for="ExpectedAnswer1Text" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ExpectedAnswer2Text" class="control-label">Очікувана відповідь 2:</label>
                    <input asp-for="ExpectedAnswer2Text" class="form-control" />
                    <span asp-validation-for="ExpectedAnswer2Text" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ExpectedAnswer3Text" class="control-label">Очікувана відповідь 3:</label>
                    <input asp-for="ExpectedAnswer3Text" class="form-control" />
                    <span asp-validation-for="ExpectedAnswer3Text" class="text-danger"></span>
                </div>
    }

        <div class="form-group">
            <input type="hidden" asp-for="QuestionId" />
        </div>

        <div class="form-group">
            <input type="submit" value="Зберегти" class="btn btn-primary" />
                <a asp-controller="Test" asp-action="Index" asp-route-id="@ViewData["TestId"]" class="btn btn-secondary">Повернутися до списку запитань</a>
        </div>
}