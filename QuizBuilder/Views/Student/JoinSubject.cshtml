@using QuizBuilder.ViewModels.Student
@model JoinSubjectViewModel

@{
    ViewData["Title"] = "Join Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Приєднатися до предмету</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="JoinSubject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConnectionId" class="control-label">Код підключення:</label>
                <input asp-for="ConnectionId" class="form-control" />
                <span asp-validation-for="ConnectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Код доступу:</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Приєднатися" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a class="btn btn-secondary" asp-action="Index">Повернутися до списку предметів</a>
</div>
